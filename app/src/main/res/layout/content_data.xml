<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.activity.DataActivity"
    tools:showIn="@layout/app_bar_data">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round"
        android:orientation="vertical"
        android:padding="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Buat Petak Pengamatan Komoditas"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:text="Silahkan lengkapi isian data dengan sebenar-benarnya"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="5dp">

                <Button
                    android:layout_width="112dp"
                    android:layout_height="25dp"
                    android:background="@drawable/refer_earn_button"
                    android:text="Simpan Data"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/refer_earn_button"
                    android:textColor="@color/colorWhite"
                    android:text="Batal"
                    android:textAllCaps="false"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Komoditas" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:background="@color/colorGrey" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Luas Komoditas (Wil. Pengamatan - Wil. Kerja UPPT - Wil. Kabupaten)" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#E4E6EF">

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian wilayah pengamatan"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Ha"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#E4E6EF">

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:hint="Isian wilayah Kerja UPPT"
                        android:paddingLeft="15dp"
                        android:textSize="15dp"
                        android:background="#EBEDF3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Ha" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#E4E6EF">

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:hint="Isian wilayah kabupaten"
                        android:paddingLeft="15dp"
                        android:textSize="15dp"
                        android:background="#EBEDF3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Ha" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Jlh. Pohon - U. Tanaman - K. Tempat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#E4E6EF">

                    <EditText
                        android:layout_width="280dp"
                        android:layout_height="35dp"

                        android:hint="Isian jumlah pohon"
                        android:paddingLeft="15dp"
                        android:textSize="15dp"
                        android:background="#EBEDF3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Pohon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#E4E6EF">

                    <EditText
                        android:layout_width="280dp"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian umur tanaman"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Tahun" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#E4E6EF">

                    <EditText
                        android:layout_width="280dp"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian ketinggian tempat"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Meter" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Bentuk - Hasil (Produksi) - Harga Jual" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian bentuk produksi"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian hasil produksi"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Rp." />

                    <EditText
                        android:layout_width="302dp"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian harga jual"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tgl. Pengamatan - Petak Petani - Produktivitas Kab." />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/etdate"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                        android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                        android:hint="dd/mm/yyyy"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian petak ke 1 s/d 10"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian produktivitas kabupaten"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Nama Petani / Pemilik Lahan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian nama petani atau pemilik lahan"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Luas Kebun - Luas Pengamatan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian luas kebun petani"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Ha" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian luas pengamatan petugas"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Ha" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Desa - Kecamatan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian desa pengamatan"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:background="#EBEDF3"
                        android:hint="Isian kecamatan pengamatan"
                        android:paddingLeft="15dp"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>